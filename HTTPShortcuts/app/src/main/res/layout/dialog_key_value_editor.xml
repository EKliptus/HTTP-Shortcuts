<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_key_value"
                style="@style/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_value" />

            <ch.rmy.android.http_shortcuts.variables.VariableEditText
                android:id="@+id/key_value_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_key_value"
                android:inputType="text"
                android:maxLines="1"
                android:paddingRight="@dimen/variable_button_spacing">

                <requestFocus />
            </ch.rmy.android.http_shortcuts.variables.VariableEditText>

            <ch.rmy.android.http_shortcuts.variables.VariableButton
                android:id="@+id/variable_button_key"
                style="@style/VariableButton"
                android:layout_below="@+id/label_key_value"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_value_value"
                style="@style/Label"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ch.rmy.android.http_shortcuts.variables.VariableEditText
                android:id="@+id/key_value_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_value_value"
                android:inputType="text"
                android:maxLines="1"
                android:paddingRight="@dimen/variable_button_spacing" />

            <ch.rmy.android.http_shortcuts.variables.VariableButton
                android:id="@+id/variable_button_value"
                style="@style/VariableButton"
                android:layout_below="@+id/label_value_value"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
